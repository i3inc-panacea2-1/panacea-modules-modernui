<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!--  NOT EDITABLE  -->
    <GridLength x:Key="KeyboardBarHeight">0</GridLength>

    <!--  IMAGES AND LOGOS  -->
    <sys:String x:Key="MainWindow.LogoImage">pack://application:,,,/Panacea.Modules.ModernUi;component/resources/images/logo_bottom.png</sys:String>
    <sys:String x:Key="MainWindow.BackgroundImage">pack://application:,,,/Panacea.Modules.ModernUi;component/resources/images/background_final.png</sys:String>
    <sys:String x:Key="MainWindow.NavigationBar.LogoImage">pack://application:,,,/Panacea.Modules.ModernUi;component/resources/Images/header_left_en.png</sys:String>


    <!--  THEME MANAGER  -->
    <GridLength x:Key="NavigationBarSize">0.6</GridLength>
    <SolidColorBrush x:Key="MainWindow.Background" Color="#444444" />
    <SolidColorBrush x:Key="MainWindow.NavigationBar.Background" Color="#000000" />

    <!--  MAIN PAGE  -->
    <sys:Int32 x:Key="MainPage.TileRows">4</sys:Int32>
    <SolidColorBrush x:Key="MainPage.TileGroup.Header.ForegroundColor" Color="#ffffff" />
    <FontWeight x:Key="MainPage.TileGroup.Header.FontWeight">Light</FontWeight>

    <Style TargetType="{x:Type Control}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
    </Style>
</ResourceDictionary>